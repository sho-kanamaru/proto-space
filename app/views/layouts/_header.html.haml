.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle{type:'button', 'data-toggle': 'collapse', 'data-target': '.navbar-responsive-collapse'}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/")
      = image_tag("logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px")
    .navbar-collapse.collapse.navbar-responsive-collapse
      -unless user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li
            .btn.btn-primary.navbar-btn
              = link_to  new_user_session_path do
                Get Started
      -else
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{'aria-expanded': 'true', 'data-toggle': 'dropdown', href: "#", role: 'button'}
              = current_user.name
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to edit_user_path(1) do
                  Profile Edit
              %li
                = link_to destroy_user_session_path, method: :delete do
                  Logout
          %li
            .btn.btn-primary.navbar-btn
              %a{href: "/prototypes/new"}
                New Proto
