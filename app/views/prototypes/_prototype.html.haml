.col-sm-4.col-md-3.proto-content
  - if user_signed_in? && current_user.id == prototype.user_id
    .dropdown.drop_menu_location
      %button.btn.btn-default.dropdown-toggle{"aria-expanded": "true", "data-toggle": "dropdown", type: "button"}
        ACTION
      %ul.dropdown-menu
        %li
          = link_to 'delete', prototype_path(prototype), method: :delete
        %li
          = link_to 'edit', edit_prototype_path(prototype)
  .thumbnail
    = link_to prototype_path(prototype) do
      = image_tag(prototype.get_main_content)
      .caption
        %h3
          = prototype.title
        .proto-meta
          .proto-user
            = link_to user_path(prototype.user) do
              by #{prototype.user.name}
          .proto-posted
            = prototype_date(prototype)
        %ul.proto-tag-list.list-inline
          = render partial: "tags/tag", collection: prototype.tags
