.container.proto-new
  = form_for @prototype do |f|
    - if @prototype.errors.any?
      %ul
        - @prototype.errors.full_messages.each do |msg|
          %li= msg
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :captured_images do |image|
              = image.file_field :content
              = image.hidden_field :status, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :captured_images do |image|
                  = image.file_field :content
                  = image.hidden_field :status, value: "sub"
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :captured_images do |image|
                  = image.file_field :content
                  = image.hidden_field :status, value: "sub"
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        = f.submit 'Publish', class: "btn btn-lg btn-primary btn-block"
