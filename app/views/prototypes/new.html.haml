.container.proto-new
  = form_for @prototype do |f|
    = render 'common/error_messages', prototype: @prototype
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :captured_images do |image|
              .js-main-image-uploader
                = image.file_field :content, required: true
                = image.hidden_field :status, value: :main
        .col-md-12
          %ul.proto-sub-list.list-group
            = render "sub_appear_image", f: f
            = render "sub_appear_image", f: f
            = render "sub_hide_image", f: f

            %li.list-group-item.col-md-4#add-form
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, cols: "30", rows: "4", placeholder: "Concept"
        .col-md-12
          %h4 Tag List
          .row
            - 3.times do |num|
              .col-md-3
                = text_field_tag "prototype[tag][]", "", placeholder: "#{set_placeholder[num]}"
      .row.text-center.proto-btn
        = f.submit 'Publish', class: "btn btn-lg btn-primary btn-block"
