.container.user-new
  = form_for @user do |f|
    - if @user.errors.any?
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Nickname"
            .user-image.col-md-2.js-img-preview
              = f.button "Change Image", class: "btn-primary"
              = f.file_field :image
            .user-email
              = f.email_field :email, placeholder: "E-Mail"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :group, placeholder: "Group"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :works, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit 'Save', class: "btn btn-lg btn-primary btn-block"
